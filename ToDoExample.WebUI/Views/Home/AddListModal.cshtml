<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Yeni Liste Ekle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-controller="Home" asp-action="AddList" method="post">
    <div class="modal-body">
        <div class="col-md-12">
            <div class="form-group">
                <label for="card">Liste Adı</label>
                <input type="text" class="form-control" name="Name">
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
        <button type="submit" class="btn btn-primary">Yeni Liste Ekle</button>
    </div>
</form>