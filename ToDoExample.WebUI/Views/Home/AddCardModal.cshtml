@model ToDoExample.Entities.ToDoList
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@Model.Name Listesine Yeni Kart Ekle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-controller="home" asp-action="addcard">
    <div class="modal-body">
        <div class="col-md-12">
            <input type="hidden" name="ToDoListId" value="@Model.Id" />
            <div class="form-group">
                <label for="card">Kart</label>
                <input type="text" class="form-control" name="Card">
            </div>
            <div class="form-group">
                <label for="datetime">Tarih</label>
                <input type="datetime-local" class="form-control" name="DateTime" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" max="2999-06-14T00:00">
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
        <button type="submit" class="btn btn-primary">Yeni Kart Ekle</button>
    </div>
</form>