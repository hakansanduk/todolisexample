@model ToDoExample.Entities.ToDoList
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@Model.Name Listesini Güncelle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-controller="Home" asp-action="UpdateList">
    <div class="modal-body">
        <div class="col-md-12">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label for="card">Liste Adı</label>
                <input type="text" class="form-control" name="Name" value="@Model.Name">
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
        <button type="submit" class="btn btn-primary">Listeyi Güncelle</button>
    </div>
</form>